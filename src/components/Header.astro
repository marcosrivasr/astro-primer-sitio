---
import type { MenuItem } from "../types/types";
import MenuItemContainerView from "./MenuItemContainerView.astro";
import MenuItemView from "./MenuItemView.astro";
const menuItems: MenuItem[] = [
  {
    title: "Media",
    url: "",
    icon: "",
  },
  {
    title: "FAQ",
    url: "",
    icon: "",
  },
  {
    title: "Blog",
    url: "",
    icon: "",
  },
];
---

<section>
  <MenuItemContainerView>
    {
      menuItems.map(({ icon, title, url }) => (
        <MenuItemView icon={icon} title={title} url={url} />
      ))
    }
  </MenuItemContainerView>
  <video src="/assets/hero.mp4" autoplay loop></video>
  <div class="logo"><img src="/assets/hero-logo.webp" alt="" /></div>
</section>

<style>
  section {
    height: 100vh;
    background-color: black;
  }

  video {
    position: relative;
    width: 100%;
  }

  .logo {
    position: relative;
    top: -450px;
    text-align: center;
  }

  .logo img {
    width: 600px;
  }
</style>
